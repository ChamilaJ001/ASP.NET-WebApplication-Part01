@model List<Category>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </td>
                   
        </tr>
        }
    </tbody>
</table>
</div>